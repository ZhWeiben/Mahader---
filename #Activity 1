#include <iostream>
using namespace std;

class Car {
public:
    string brand;
    string model;
    int year;

    void displayInfo() {
        cout << "Car Details: " << brand << " " << model << ", Year: " << year << endl;
    }
};

int main() {
    Car myCar;

    cout << "Enter car brand: ";
    cin >> myCar.brand;

    cout << "Enter car model: ";
    cin >> myCar.model;

    cout << "Enter car year: ";
    cin >> myCar.year;

    myCar.displayInfo();

    return 0;
}
